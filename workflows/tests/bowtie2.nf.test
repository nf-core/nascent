nextflow_pipeline {

    name "Test Workflow main.nf"
    script "../../main.nf"
    tag "aligner"
    tag "bowtie2"

    test("Should run with bowtie2 (default)") {

        when {
            params {
                outdir = "$outputDir"
                aligner = "bowtie2"
            }
        }

        then {
            assert workflow.success
            assert snapshot(
                workflow.trace.tasks().size(),
                path("$outputDir/pipeline_info/nf_core_pipeline_software_mqc_versions.yml"),
            ).match()
        }
    }
}
